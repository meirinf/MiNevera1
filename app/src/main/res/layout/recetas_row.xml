<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/adapterImagen"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription=""
        tools:ignore="ContentDescription,RtlHardcoded"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="210dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4765625"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="183dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adapterNombreReceta"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/adapterImagen"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_alignBottom="@+id/adapterImagen"
        android:layout_alignParentStart="true" />

</RelativeLayout>
</layout>

