<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/adapterArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/no_ha_cargado"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@+id/adapterCategoria"
        android:layout_toRightOf="@+id/adapterImagen"
        android:layout_toEndOf="@+id/adapterImagen"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        tools:ignore="RtlHardcoded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adapterCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="no ha cargado"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@+id/adapterNombreReceta"
        android:layout_alignLeft="@+id/adapterArea"
        android:layout_alignStart="@+id/adapterArea"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/adapterArea"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginStart="16dp" />

    <TextView
        android:id ="@+id/adapterNombreReceta"
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/adapterImagen"
        android:layout_alignLeft="@+id/adapterCategoria"
        android:layout_alignStart="@+id/adapterCategoria"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/background_dark"
        android:textColorLink="?attr/colorButtonNormal"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/adapterImagen"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:contentDescription=""
        tools:ignore="ContentDescription,RtlHardcoded"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4453125"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="171dp" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Instrucciones"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:text=" @string/no_ha_cargado"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Ingredientes"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/adapterCategoria" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="208dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="208dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        app:layout_constraintGuide_begin="52dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="52dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>